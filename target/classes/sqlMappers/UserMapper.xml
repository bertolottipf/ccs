<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserMapper">
	
	
	
	<select id="selectAll" resultMap="result">
		SELECT 
			* 
		FROM 
			users
	</select>
	
	
	
	<insert id="insert" parameterType="User">
		INSERT INTO
			users (username, password, active, action, role, citta, provincia)
		VALUES
			(#{username},#{password},#{active},#{action},#{role},#{citta},#{provincia})
		<selectKey keyProperty="id" resultType="int">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>
	
	
	
	<select id="selectOne" resultMap="result" parameterType="int">
		SELECT 
			* 
		FROM 
			users 
		WHERE 
			id = #{id}
	</select>	
	
	
	
	<select id="selectByUsernamePassword" parameterType="map" resultMap="result">
		SELECT 
			* 
		FROM 
			users
		WHERE 
			username = #{username} 
				AND 
					password = #{password}
	</select>
	
	

	<resultMap type="User" id="result">
		<id property="id" column="id"/>
		<result property="username" column="username"/>
		<result property="password" column="password"/>
		<result property="active" column="active"/>
		<result property="action" column="action"/>
		<result property="role" column="role"/>
		<result property="citta" column="citta"/>
		<result property="provincia" column="provincia"/>
	</resultMap>

	

	<update id="update" parameterType="User">
	UPDATE 
		users
	SET 
		username = #{username},
		password = #{password},
		active = #{active},
		action = #{action},
		role = #{role},
		citta = #{citta},
		provincia = #{provincia}
	WHERE 
		id = #{id}
	</update>	
	
	
	
	
	<delete id="delete" parameterType="int">
		DELETE FROM 
			users 
		WHERE 
			id = #{id}
	</delete>
	
</mapper>